{
  "include": [
    "./app/**/*",
    "./admin/**/*",
    "./tests/**/*",
    "./config/environment.js"
  ],
  "exclude": ["./tests/unit/utils/decorators-test.js"],
  "extends": "../../jsconfig-base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./",
    "outDir": "../discourse-types/declarations",
    "types": ["ember-source/types"],
    "paths": {
      "discourse/admin/*": ["./admin/*"],
      "discourse/tests/*": ["./tests/*"],
      "discourse/*": ["./app/*"],
    }
  }
}
