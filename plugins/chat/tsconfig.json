{
  "extends": "../../tsconfig.base.json",
  "include": [
    "./assets/javascripts/**/*",
    "./test/javascripts/**/*"
  ],
  "exclude": [],
  "compilerOptions": {
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noEmitOnError": false,
    "declaration": false,
    // "outDir": "",
    // "composite": true,
    "rootDir": "./",
    "types": ["discourse/external-types"],
    "paths": {
      "discourse/plugins/chat/*": ["./assets/javascripts/*"]
    }
  }
}
