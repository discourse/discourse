{
  "extends": "discourse/tsconfig-plugin",
  "include": [
    "admin/assets/javascripts/**/*",
    "assets/javascripts/**/*",
    "test/javascripts/**/*",
    "node_modules/discourse/declarations/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "discourse/plugins/discourse-narrative-bot/*": ["./assets/javascripts/*"],
      "discourse/plugins/discourse-narrative-bot/admin/*": [
        "./admin/assets/javascripts/admin/*"
      ]
    }
  }
}
