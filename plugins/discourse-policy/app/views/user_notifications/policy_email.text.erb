<%- site_link = raw(@markdown_linker.create(@site_name, '/')) %>

<% if SiteSetting.private_email? %>
<%= t('system_messages.contents_hidden') %>
<% else %>
<%= format_for_email(@post, true) %>
<% end %>

<%= raw(t 'user_notifications.policy_email.visit_link_to_respond',
  visit_topic_link: @markdown_linker.create(t('user_notifications.policy_email.visit_topic'), "#{Discourse.base_url}#{@post.url(without_slug: SiteSetting.private_email?)}")) %>

<%= raw(t 'user_notifications.policy_email.unsubscribe',
  email_preferences_link: @markdown_linker.create(t('user_notifications.policy_email.your_policy_email_settings'), @preferences_path),
  unsubscribe_link: @markdown_linker.create(t('user_notifications.digest.click_here'), @unsubscribe_link)) %>

<%= raw(@markdown_linker.references) %>
