{
  "extends": "discourse/tsconfig-plugin",
  "include": [
    "admin/assets/javascripts/**/*",
    "assets/javascripts/**/*",
    "test/javascripts/**/*",
    "node_modules/discourse/declarations/**/*"
  ],
  "compilerOptions": {
    "types": ["discourse/external-types"],
    "paths": {
      "discourse/plugins/discourse-templates/*": [
        "./assets/javascripts/*"
      ],
      "discourse/plugins/discourse-templates/admin/*": [
        "./admin/assets/javascripts/admin/*"
      ]
    }
  }
}
