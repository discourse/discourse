<aside class='quote' data-post="{{post_number}}" data-topic="{{topic_id}}">
  <div class='title'>
    <div class='quote-controls'></div>
    {{{avatar}}}
    <div class="quote-title__text-content">
      <a href="{{original_url}}">{{{title}}}</a> {{{category_html}}}
    </div>
  </div>
  <blockquote>
    {{{quote}}}
  </blockquote>
</aside>
