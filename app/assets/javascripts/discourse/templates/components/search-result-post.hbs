{{#each results as |result|}}
  <a class='search-link' href='{{unbound result.url}}'>
    <span class='topic'>
      {{i18n 'search.post_format' post_number=result.post_number username=result.username}}
    </span>
    {{#unless site.mobileView}}
      <span class='blurb'>
      {{{unbound result.blurb}}}
      </span>
    {{/unless}}
  </a>
{{/each}}
