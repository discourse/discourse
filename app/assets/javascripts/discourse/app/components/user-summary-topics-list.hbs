{{#if @items}}
  <ul>
    {{#each @items as |item|}}
      {{yield item}}
    {{/each}}
  </ul>
  {{#if this.hasMore}}
    <p>
      <LinkTo
        @route={{concat "userActivity." @type}}
        @model={{@user}}
        class="more"
      >
        {{i18n (concat "user.summary.more_" @type)}}
      </LinkTo>
    </p>
  {{/if}}
{{else}}
  <p>{{i18n (concat "user.summary.no_" @type)}}</p>
{{/if}}