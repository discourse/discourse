</li>

<li class="nav-profile">
  <LinkTo @route="preferences.profile">
    {{d-icon "user"}}
    <span>{{i18n "user.preferences_nav.profile"}}</span>
  </LinkTo>
</li>

<li class="nav-emails">
  <LinkTo @route="preferences.emails">
    {{d-icon "envelope"}}
    <span>{{i18n "user.preferences_nav.emails"}}</span>
  </LinkTo>
</li>

