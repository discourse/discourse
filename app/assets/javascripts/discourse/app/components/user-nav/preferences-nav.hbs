  <li class="indent nav-sidebar">
    <LinkTo @route="preferences.sidebar">
      {{d-icon "bars"}}
      <span>{{i18n "user.preferences_nav.sidebar"}}</span>
    </LinkTo>
  </li>
{{/if}}

<PluginOutlet @name="user-preferences-nav-under-interface" @connectorTagName="div" @args={{hash model=@model}} />
