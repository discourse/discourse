<DModal @closeModal={{@closeModal}} @title={{i18n "log_in"}}>
  <:body>
    {{html-safe (i18n "login.not_activated" sentTo=@model.sentTo)}}
  </:body>
  <:footer>
    <ActivationControls
      @sendActivationEmail={{this.sendActivationEmail}}
      @editActivationEmail={{this.editActivationEmail}}
    />
  </:footer>
</DModal>