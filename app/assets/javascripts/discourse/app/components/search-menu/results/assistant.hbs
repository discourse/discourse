<ul class="search-menu-assistant">
  {{! suggestion type keywords are mapped to SUGGESTION_KEYWORD_MAP }}
  {{#if (eq this.suggestionType "tag")}}
    {{#each @results as |result|}}
      <SearchMenu::Results::AssistantItem
        @prefix={{this.prefix}}
        @tag={{result.tagName}}
        @additionalTags={{result.additionalTags}}
        @category={{result.category}}
        @slug={{@contextTypeSlug}}
        @withInLabel={{@withInLabel}}
        @isIntersection={{true}}
      />
      {{result}}
    {{/each}}
  {{else if (eq this.suggestionType "category")}}
    {{#each @results as |result|}}
      {{#if result.model}}
        <SearchMenu::Results::AssistantItem
          @prefix={{this.prefix}}
          @category={{result.model}}
          @slug={{get this.fullSlugForCategoryMap result.model.id}}
          @withInLabel={{@withInLabel}}
        />
      {{else}}
        <SearchMenu::Results::AssistantItem
          @prefix={{this.prefix}}
          @tag={{result.model.name}}
          @slug={{concat this.prefix "#" result.model.name}}
          @withInLabel={{@withInLabel}}
        />
      {{/if}}
    {{/each}}
  {{else if (eq this.suggestionType "user")}}
    {{#if this.userMatchesInTopic}}
      <SearchMenu::Results::AssistantItem
        @extraHint={{I18n "search.enter_hint"}}
        @prefix={{this.prefix}}
        @user={{this.user}}
        @slug={{concat this.prefix "@" this.user.username}}
        @suffix={{I18n "search.in_topics_posts"}}
      />
      <SearchMenu::Results::AssistantItem
        @prefix={{this.prefix}}
        @user={{this.user}}
        @setTopicContext={{true}}
        @slug={{concat this.prefix "@" this.user.username}}
        @suffix={{I18n "search.in_this_topic"}}
      />
    {{else}}
      {{#each @results as |result|}}
        <SearchMenu::Results::AssistantItem
          @prefix={{this.prefix}}
          @user={{result.model}}
          @slug={{concat this.prefix "@" result.model.username}}
        />
      {{/each}}
    {{/if}}
  {{else}}
    {{#each this.suggestionShortcuts as |item|}}
      {{#if this.isSuggestionKeyword}}
        <SearchMenu::Results::AssistantItem @slug={{concat this.prefix item}} />
      {{/if}}
    {{/each}}
  {{/if}}
</ul>