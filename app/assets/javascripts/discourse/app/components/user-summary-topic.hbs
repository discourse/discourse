<PluginOutlet @name="user-summary-topic-info-wrapper">
  <span class="topic-info">

    {{format-date @createdAt format="tiny" noTitle="true"}}

    {{#if @likes}}
      &middot;

      {{d-icon "heart"}}&nbsp;<span class="like-count">{{number @likes}}</span>
    {{/if}}

  </span>
</PluginOutlet>

<PluginOutlet
  @name="user-summary-topic-title-wrapper"
  @outletArgs={{hash topic=@topic createdAt=@createdAt likes=@likes url=@url}}
>
  <br />
  <a href={{@url}}>{{html-safe @topic.fancyTitle}}</a>
</PluginOutlet>