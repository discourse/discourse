<form>
  <div class="control-group">
    {{combo-box
      class="timer-type"
      onChange=onChangeStatusType
      content=timerTypes
      value=statusType
    }}
  </div>
  {{#if publishToCategory}}
    <div class="control-group">
      <label class="control-label">{{i18n "topic.topic_status_update.publish_to"}}</label>
      {{category-chooser
        value=topicTimer.category_id
        excludeCategoryId=excludeCategoryId
        onChange=(action (mut topicTimer.category_id))
      }}
    </div>
  {{/if}}
  {{#if showFutureDateInput}}
    <label class="control-label">{{i18n "topic.topic_status_update.when"}}</label>
    {{time-shortcut-picker prefilledDatetime=(readonly topicTimer.updateTime) onTimeSelected=onTimeSelected customOptions=customTimeShortcutOptions hiddenOptions=hiddenTimeShortcutOptions}}
  {{/if}}
  {{#if useDuration}}
    <div class="controls">
      <label class="control-label">{{i18n durationTranslationKey}}</label>
      {{text-field id="topic_timer_duration" class="topic-timer-duration" type="number" value=topicTimer.duration min="1"}}
    </div>
  {{/if}}
  {{#if showTopicStatusInfo}}
    <div class="alert alert-info">
      {{topic-timer-info
        statusType=statusType
        executeAt=executeAt
        basedOnLastPost=topicTimer.based_on_last_post
        duration=topicTimer.duration
        categoryId=topicTimer.category_id
      }}
    </div>
  {{/if}}
</form>

