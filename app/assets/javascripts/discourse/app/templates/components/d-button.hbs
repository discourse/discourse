{{#if icon}}
  {{#if isLoading}}
    {{~d-icon "spinner" class="loading-icon"~}}
  {{else}}
    {{~d-icon icon~}}
  {{/if}}
{{else}}
  {{#if isLoading}}
    {{~d-icon "spinner" class="loading-icon"~}}
  {{/if}}
{{/if}}

{{~#if computedLabel~}}
  <span class="d-button-label">{{html-safe computedLabel}}{{#if ellipsis}}&hellip;{{/if}}</span>
{{~else~}}
  &#8203;
  {{! Zero-width space character, so icon-only button height = regular button height }}
{{~/if~}}

{{yield}}
