{{~#if view.renderDiv~}}
  <div class="topic-statuses">
{{~/if~}}

{{{~view.html~}}}

{{~#if status.href~}}
  <a href="{{status.href}}" title="{{status.title}}" class="topic-status {{status.extraClasses}}">{{d-icon status.icon}}</a>
{{~else~}}
  {{~#each view.statuses as |status|~}}
    <span title="{{status.title}}" class="topic-status">{{d-icon status.icon class=status.key}}</span>
  {{~/each~}}
{{~/if~}}

{{~#if view.renderDiv~}}
  </div>
{{~/if~}}
