<% if @disable_email_custom_styles %>
  <%= yield %>
  <% if defined?(html_body) %><%= html_body %><% end %>
<% else %>
  <% preview = defined?(email_preview) ? email_preview : nil %>
  <%= email_html_template(preview: preview) do %>
    <%= yield %>
    <% if defined?(html_body) %><%= html_body %><% end %>
  <% end %>
<% end %>
